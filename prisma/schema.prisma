generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Car {
  id        Int     @id @default(autoincrement())
  license   String
  vin       String
  model     String
  ownerName String
  phone     String
  visits    Visit[]
}

model Visit {
  id          Int      @id @default(autoincrement())
  car         Car      @relation(fields: [carId], references: [id])
  carId       Int
  description String
  date        DateTime @default(now()) // data ultimei revizii
  mileage     Int // kilometraj la ultima revizie
  nextServiceDate DateTime? // data automata (calculata la 1 an de la ultima revizie)
  customNextServiceDate DateTime? // data setata manual de service 
  createdAt   DateTime @default(now())
}

